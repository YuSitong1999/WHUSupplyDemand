/**index.wxss**/

/* 上边栏 */
@import "/style/upper-sidebar.wxss";

/* 下边栏 */
@import "/style/lower-sidebar.wxss";
page {
  /* background: #f6f6f6; */
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}

.upper-button {
  width: 35%;
  margin-top: 2%;
  margin-left: 2%;
  float: left;
}
#button-supply {
  background-color: red;
}
#button-demand {
  background-color: blue;
}

#middle-scroll-sidebar {
  height: 5%;
  width: 98%;
  white-space: nowrap;
  /* box-sizing:  border-box ; */
}
#middle-sidebar{
  height: 5%;
}
#middle-scroll-sidebar button{
  height: 100%;
}

.messagebox {
  margin-top: 2%;
  width: 95%;
  height: 70%;
  background-color: white;
}

.message {
  width: 100%;
  height: 140rpx;
  display: flex; /*以同一块中上一个子块为基准*/
  flex-direction: row; /*排在一行中*/
  align-items: center; /*内部块居中*/
  border: 1px solid rgba(0, 0, 0, 0.1);
  /* background: red; */
  margin-bottom: 10rpx;
}

.userinfo {
  width: 20%;

  display: flex; /*以同一块中上一个子块为基准*/
  flex-direction: column; /*排在一列中*/
  align-items: center; /*内部块居中*/
}

.userinfo-avatar{
  width: 80rpx;
  height: 80rpx;
}

.messageTitle {
  font-weight: bold;
  margin: 10rpx;
}